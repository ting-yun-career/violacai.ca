{
  "name": "violacai.ca",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "live-server build",
    "copy:js": "copyfiles -f source/js/*.js build/js",
    "copy:js:watch": "onchange 'source/js/main.js' -- yarn copy:js",
    "copy:css": "copyfiles -f source/vendor/*.css build/css",
    "copy:font": "copyfiles -f source/fonts/* build/fonts",
    "copy:img": "copyfiles -f source/img/* build/img",
    "pug:watch": "pug -w --pretty source/pug/index.pug -o build/",
    "scss:main:watch": "sass -w source/scss/custom/main.scss:build/css/main.css",
    "scss:main:red:watch": "sass -w source/scss/colors/main-red.scss:build/css/main-red.css",
    "scss:bootstrap:watch": "sass -w source/scss/vendors-custom/bootstrap-custom.scss:build/css/bootstrap-custom.css",
    "init": "yarn copy:css && yarn copy:font && yarn copy:img",
    "all:watch": "yarn pug:watch & yarn scss:main:watch & yarn scss:main:red:watch & yarn scss:bootstrap:watch & yarn copy:js:watch & yarn start"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bootstrap": "4.6.2",
    "copyfiles": "^2.4.1",
    "live-server": "1.2.1",
    "node-sass": "^9.0.0",
    "onchange": "^7.1.0",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.79.1"
  }
}
